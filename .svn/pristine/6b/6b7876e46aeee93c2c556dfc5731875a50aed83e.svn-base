let boardService = (function () {
    // 글 단일 조회
    function get(bno, callback) {
        url = cp + bno
        $.getJSON(url)
            .done(function (data) {
                if (callback) {
                    callback(data)
                }
            })
    }

    // 글 목록 조회
    function getList(param, callback) {
        let url = cp + 'list/' + (param.bno ?? "");

        $.getJSON(url)
            .done(function (data) {
                if (callback) {
                    callback(data)
                }
            })
    }

    function insertLike(param, callback) {
        let url = cp + param.bno + '/like'

        $.post({
            url : url,
            data : {bno : param.bno, id : param.id}
        }).done (function (data) {
            if (callback) {
                callback(data)
            }
        })
    }

    function removeLike(param, callback) {
        let url  = cp + param.bno + '/unlike'

        $.ajax({
            url : url,
            method : "delete",
            data : {bno : param.bno, id : param.id}
        }).done (function (data) {
            if (callback) {
                callback(data)
            }
        })
    }

    function register(param, callback) {
        let url = cp + "register"

        $.post({
            url : url,
            data : {content : param.content, writer : param.writer}
        }).done(function (data) {
            if (callback) {
                callback(data)
            }
        })
    }

    return {
        get : get,
        getList : getList,
        register : register,
        insertLike : insertLike,
        removeLike : removeLike
    }
})()